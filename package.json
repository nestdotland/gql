{
  "name": "api",
  "main": "dist/index.js",
  "description": "The API for nest.land",
  "repository": "https://github.com/nestdotland/api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "test": "echo 'no tests are defined'",
    "fmt": "prettier --check src",
    "fmt:write": "prettier --write src",
    "seed": "prisma db seed --preview-feature",
    "migrate": "prisma migrate dev --preview-feature --name",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema"
  },
  "devDependencies": {
    "@types/faker": "^5.1.6",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/node": "^14.14.22",
    "faker": "^5.4.0",
    "prettier": "^2.2.1",
    "prisma": "~2.17.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@prisma/client": "~2.17.0",
    "apollo-server": "^2.21.0",
    "apollo-server-express": "^2.21.0",
    "graphql": "^15.5.0",
    "graphql-iso-date": "^3.6.1",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "0.31.0"
  }
}
