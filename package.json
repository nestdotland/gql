{
  "name": "api",
  "main": "dist/index.js",
  "description": "The API for nest.land",
  "repository": "https://github.com/nestdotland/api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/",
    "start": "node dist/",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn generate && tsc",
    "test": "echo 'no tests are defined'",
    "fmt": "prettier --check src",
    "fmt:write": "prettier --write src",
    "seed": "prisma db seed --preview-feature",
    "seed2": "ts-node ./prisma/seed.ts",
    "push": "prisma db push",
    "migrate": "prisma migrate dev --preview-feature --name",
    "migrate:init": "prisma migrate dev --preview-feature --name init --create-only",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema"
  },
  "devDependencies": {
    "@types/graphql-iso-date": "^3.4.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^16.9.6",
    "@types/semver": "^7.3.8",
    "mime": "^2.5.2",
    "prettier": "^2.4.1",
    "prisma": "^3.0.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@prisma/client": "^3.0.2",
    "apollo-server": "~2.25.2",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-query-complexity": "^0.9.0",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.34.0",
    "semver": "^7.3.5"
  }
}
